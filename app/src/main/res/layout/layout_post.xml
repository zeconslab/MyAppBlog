<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="15dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPostProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/colorGrey"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtPostName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:text="New Post In Order"
                    />

                <TextView
                    android:id="@+id/txtPostDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/colorLightGrey"
                    android:fontFamily="@font/poppins"
                    android:text="Jun  13 At 10:30 AM"
                    android:layout_marginTop="-6dp"
                    />


            </LinearLayout>

            <ImageButton
                android:id="@+id/btnOptionPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="@color/colorPrimary"
                android:background="@android:color/transparent"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPostDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            android:fontFamily="@font/poppins"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:justificationMode="inter_word"
            android:text=" nuanfiasbia suhasiu huiash du asuih as"
            />

        <ImageView
            android:id="@+id/imgPostPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@color/colorGrey"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            >

            <ImageButton
                android:id="@+id/btnPostLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:background="@android:color/transparent"
                app:tint="@color/colorGrey"
                />

            <ImageButton
                android:id="@+id/btnPostComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_chat_bubble_outline_24"
                android:background="@android:color/transparent"
                app:tint="@color/colorGrey"/>

            <TextView
                android:id="@+id/txtPostLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:textSize="13dp"
                android:textColor="@color/colorLightGrey"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/txtPostComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:textSize="13dp"
                android:textColor="@color/colorLightGrey"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>